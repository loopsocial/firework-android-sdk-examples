<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ExampleApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Java_integration"
        tools:targetApi="31">

        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feedintegration.MainActivity" />


        <activity android:name=".feedintegration.activity.ActivityIntegrationActivity" />

        <activity android:name=".feedintegration.fragment.FragmentIntegrationActivity" />

        <activity android:name=".feedintegration.recyclerview.RecyclerViewIntegrationActivity" />

        <activity android:name=".feedintegration.addremove.AddRemoveIntegrationActivity" />

        <activity android:name=".storyblock.MainActivity" />

        <activity android:name=".pip.PictureInPictureActivity" />

        <activity android:name=".share.ShareLinkMainActivity" />

        <activity
            android:name=".share.ShareLinkActivity"
            android:exported="true"
            android:theme="@style/Theme.NoUiActivity">
            <intent-filter android:label="Share link example">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Replace the host value with your website domain -->
                <data
                    android:host="example.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity android:name=".language.LanguageMainActivity" />

    </application>

</manifest>