<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <Button
        android:id="@+id/feedIntegrationBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_feed_integration"
        android:textSize="16sp"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/storyBlockBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_storyblock"
        android:textSize="16sp"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/pictureInPictureBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_picture_in_picture"
        android:textSize="16sp"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/shareLinkBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_share_link"
        android:textSize="16sp"
        android:layout_margin="8dp" />

</LinearLayout>
